<?xml version="1.0" encoding="utf-8" ?>
<addon scheme="4.0">
    <id>bb_queue_emails</id>
    <name>Email queueing</name>
    <description>Send emails through jobs instead of synchronously.</description>
    <version>1.0.0</version>
    <priority>1000</priority>
    <status>active</status>
    <supplier>Best Brands</supplier>
    <supplier_link>https://bestbrands.eu</supplier_link>
    <default_language>en</default_language>

    <authors>
        <author>
            <email>info@bestbrands.eu</email>
        </author>
    </authors>

    <compatibility>
        <dependencies>queue</dependencies>
        <core_version>
            <min>4.15.1</min>
        </core_version>
        <php_version>
            <min>7.4.0</min>
        </php_version>
    </compatibility>

    <autoload>
        <psr4 prefix="Tygh\Addons\BbQueueEmails\">src</psr4>
    </autoload>

    <bootstrap>\Tygh\Addons\BbQueueEmails\Bootstrap</bootstrap>
</addon>
